@page
@model AFCitizen.Pages.PrivilegesModel
@{
    Layout = "_Layout";
}
@section  head{ 
    <style>
        body{
            -webkit-user-select: none;
            -moz-user-select: -moz-none;
            user-select: none;
        }
    </style>
}
    <div class="container">
        <div class="jumbotron">
            <div class="display-4 text-info">Мои льготы</div>
        </div>
        <br />
        <form asp-page="Privileges" method="post">
            <h2>О себе</h2>
            <hr />
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="isCitizen" name="isCitizen" />
                    <label class="custom-control-label" for="isCitizen">Гражданин Российской Федерации</label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="isMan" name="gender" value="man">
                    <label class="custom-control-label" for="isMan">Мужчина</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="isWoman" name="gender" value="woman">
                    <label class="custom-control-label" for="isWoman">Женщина</label>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-3 input-group-sm">
                    <div class="input-group-prepend">
                        <span style="width:200px" class="input-group-text">Возраст (полных лет):</span>
                    </div>
                    <input type="number" min="18" max="150" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-3 input-group-sm">
                    <div class="input-group-prepend">
                        <span style="width:200px" class="input-group-text">Место проживания:</span>
                    </div>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="same" name="same" data-toggle="collapse" data-target="#registration" />
                    <label class="custom-control-label" for="same">Совпадает с пропиской</label>
                </div>
            </div>
            <div id="registration" class="form-group show">
                <div class="input-group mb-3 input-group-sm">
                    <div class="input-group-prepend">
                        <span style="width:200px" class="input-group-text">Место прописки:</span>
                    </div>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <br />
            <h2>Семья</h2>
            <hr />
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="mar|div" name="mar|div" data-toggle="collapse" data-target="#marriage" />
                    <label class="custom-control-label" for="mar|div">В браке / В разводе</label>
                </div>
            </div>
            <div id="marriage" class="collapse hide">
                <div class="form-group">
                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span style="width:200px" class="input-group-text">Какой по счёту брак:</span>
                        </div>
                        <input type="number" class="form-control" min="1" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="dead" name="isDead" data-toggle="collapse" data-target="" />
                        <label class="custom-control-label" for="dead">Супруг умер</label>
                    </div>
                </div>
            </div>
        </form>
    </div>
