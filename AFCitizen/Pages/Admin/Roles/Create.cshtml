@page
@model AFCitizen.Pages.Admin.Roles.CreateModel
@{
    Layout = "_Layout";
}
    <div class="container">
        <div class="bg-dark text-white p-1 text-center"><h3>Создать Роль</h3></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-page="Create" method="post">
            <div class="form-group">
                <label asp-for="Name">Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-primary btn-block">Создать</button>
            <a asp-page="Index" class="btn btn-outline-secondary btn-block">Отмена</a>
        </form>
    </div>
