@page
@model AFCitizen.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}
    <div class="container">
        @if (Model.isAuthority)
        {
            <div class="card m-auto border-0" style="max-width:500px">
                <img class="card-img-top" src="~/assets/rf.webp" alt="Флаг и Герб РФ" />
                <div class="card-body">
                    <h1 class="card-title text-center">Авторизация</h1>
                    <form asp-page="Authorize" method="post">
                        <div class="form-group">
                            <label asp-for="Email">Эл. почта:</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Пароль:</label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Авторизоваться</button>
                    </form>
                    <div class="card-footer bg-transparent text-danger" asp-validation-summary="All"></div>
                </div>
            </div>
        }
        else
        {
            <div class="bg-dark text-white p-1 text-center"><h3>Вход</h3></div>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-page="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
                <div class="form-group">
                    <label asp-for="Email">Электронная почта:</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль:</label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <button class="btn btn-outline-primary btn-block btn-lg" type="submit">Войти</button>
            </form>
        }
    </div>