@page
@model AFCitizen.Pages.Admin.IndexModel
@{
    Layout = "_Layout";
}
    <div class="container-fluid">
        <div class="bg-dark text-white p-1 text-center"><h3>Пользователи</h3></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <table class="table table-sm table-bordered">
            <tr><th>Пользователь</th><th>Эл. адрес</th><th>Диспетчер</th><th>Должность</th></tr>
            @if (Model.Users.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">Пользователи отсутствуют</td></tr>
            }
            else
            {
                foreach (AFCitizen.Models.CitizenUser user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Dispatcher</td>
                        <td>@user.Position</td>
                        <td>
                            <form asp-page-handler="Delete" asp-route-id="@user.Id" method="post">
                                <a style="display:inline-block; width:49%" class="btn btn-sm btn-outline-primary" asp-page="Edit"
                                   asp-route-id="@user.Id">Править</a>
                                <button type="submit" style="display:inline-block; width:49%; float:right" class="btn btn-sm btn-outline-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>

        <a class="btn btn-outline-primary btn-block" asp-page="Create">Cоздать</a>
    </div>
