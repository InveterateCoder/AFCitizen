@page
@model AFCitizen.Pages.Account.LoginModel
@{
    Layout = "_Layout";
}
    <div class="container">
        <div class="bg-dark text-white p-1 text-center"><h3>Вход</h3></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-page="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
            <div class="form-group">
                <label asp-for="Form.Email">Электронная почта:</label>
                <input asp-for="Form.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Form.Password">Пароль:</label>
                <input asp-for="Form.Password" class="form-control" />
            </div>
            <button class="btn btn-outline-primary btn-block btn-lg" type="submit">Войти</button>
        </form>
    </div>