@page
@model AFCitizen.Pages.Account.RegisterModel
@{
    Layout = "_Layout";
}

    <div class="container">
        <div class="bg-dark text-white p-1 text-center"><h3>Регистрация</h3></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-page="Register" method="post">
            <div class="form-group">
                <label asp-for="Name">Имя:</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Эл. адрес:</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль:</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-outline-primary btn-block">Регистрировать</button>
            <a class="btn btn-outline-secondary btn-block" asp-page="/Index">Отмена</a>
        </form>
    </div>