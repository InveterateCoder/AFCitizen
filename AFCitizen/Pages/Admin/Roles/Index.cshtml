@page
@model AFCitizen.Pages.Admin.Roles.IndexModel
@{
    Layout = "_Layout";
}
    <div class="container">
        <div class="bg-dark text-white p-1 text-center"><h3>Роли</h3></div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <table class="table table-sm table-bordered">
            <tr><th>Название</th><th>Пользователи</th></tr>
            @if (Model.Roles.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">Роли не созданы</td></tr>
            }
            else
            {
                foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td identity-role="@role.Id"></td>
                        <td style="min-width:150px">
                            <form asp-page="Index" asp-route-id="@role.Id" method="post">
                                <a style="display:inline-block; width:49%" class="btn btn-sm btn-outline-primary" asp-page="Edit" asp-route-id="@role.Id">Править</a>
                                <button type="submit" style="display:inline-block; width:49%; float:right" class="btn btn-sm btn-outline-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-outline-primary btn-block" asp-page="Create">Создать</a>
    </div>
