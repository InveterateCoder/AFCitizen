@{
    Layout = "_Layout";
}
    <div class="jumbotron text-center">
        <div class="display-1">Гражданин <span class="badge badge-secondary">РФ</span></div>
    </div>
    <div class="container">
        <nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
            <span title="Amazing Future" class="navbar-brand" style="cursor:default">AF</span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Compose">Написать</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" style="cursor:pointer" data-toggle="dropdown">Мои обращения</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Активные</a>
                            <a class="dropdown-item" href="#">Архив</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="Privileges">Мои Льготы</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if ((bool)TempData["IsAuthenticated"])
                    {
                        <li class="navbar-text text-info mr-md-4 m-auto">
                            @TempData["AuthenticatedName"]
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link" asp-page-handler="SignOut">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="cursor:pointer" data-toggle="dropdown">Авторизация</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Account/Register">Регистрация</a>
                                <a class="dropdown-item" href="/Account/Login">Войти</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        @RenderBody()
    </div>